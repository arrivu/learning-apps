<% provide(:title, 'Create Course') %>
<br>
<%= form_for @preview do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="row">
  <div class="span10">
    <div class = "hero-unit">

      
      <table class="table table-hover ">

        <tr> <td><%= f.label :course_id, "Courses" %></td>
          <td><%= f.select(:course_id, @course.collect {|p| [ p.title,p.id ] })%></td></tr>

          <tr> <td><%= f.label :name %></td>
            <td><%= f.text_field :name ,:maxlength => 15%></td></tr>


            <tr> <td><%= f.label :desc %></td>
              <td><%= f.text_area :desc ,:cols => "30", :rows => "5" ,:maxlength => 50 %></td></tr>  


              <tr> <td><%= f.label :video_url, "Video URL" %> </td>
                <td><%= f.text_area :video_url ,:cols => "30", :rows => "3" %> </td></tr> 


                <tr> <td><%= f.label :sequence %></td>
                  <td><%= f.text_field :sequence %></td></tr>


                  <tr> <td><%= f.label :enable, "Show This Preview" %></td>

                    <td><%= f.check_box :enable %></td></tr>


                    <tr> <td></td> <td><%= f.submit "Update Preview", class: "btn btn-large btn-primary"%></td></tr>
                    <% end %>
                  </table>


                </div>
              </div>
            </div>