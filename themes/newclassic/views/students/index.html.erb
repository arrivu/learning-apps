<div id="wrap">
  <%= render 'shared/side_menu' %>
  <div id="content">
    <div class="container-fluid outer"  >
      <div class="row-fluid">
        <div class="span12 inner">
          <div class="row-fluid">
            <div class="span12">
              <div class="box">
                <div id="collapse4" class="body">
                  <div class="icons"><span class="badge badge-info">Manage Students Details</span></div>
                  <textarea rows="2" cols="20" id="area" style="display:none"></textarea>
                  <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                    <thead>
                    <tr>
                      <th >S.No:</th>
                      <th >Profile</th>
                      <th >Name</th>
                      <th >Email</th>
                      <th >Description</th>
                      <th >Approve</th>
                      <th >Created At</th>
                      <th style="text-align:center;"><%=t '.actions', :default => t("helpers.actions") %></th>
                    </tr></thead>
                    <% @students.each_with_index do |student,i| %>
                        <tr><td><%= i+=1 %> </td>
                        <td>
                          <% if student.user.image_blob != nil %>
                              <%= image_tag url_for(:controller=>"registrations",:action => 'user_image', :id => student.user.id), :size => "30x30" %>
                          <% end  %>
                        </td>

                          <td><%= student.user.name %></td>
                          <td><%= student.user.email %></td>
                          <td><%= student.description %></td>
                          <%= form_for student , :url => url_for(:controller => 'students', :action => 'activate_students' ,id: student) do |f| %>
                              <td><%= f.check_box :is_active %></td>
                              <td><%=l student.created_at, :format=>'%d %b. %Y %I:%M' %></td>
                              <td><%= f.submit "Approve/Update student", class: "btn btn-mini btn-info" %></td>
                          <% end  %>
                          <td><%= link_to(student_path(student),
                                          :method => :delete,
                                          :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) ) do %>
                                <i class="icon icon-trash"></i></td>
                            <% end %>
                            </tr>
                    <% end %>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="left" style="padding: 0px;width: 16%;float: right;">
    <a href="#" class="btn btn-default btn-large add_student" style="margin:10px;"><i class="icon icon-plus-sign"></i>Add Students</a>
  </div>
  <div id="push"></div>
  <div class="clearfix"></div>
</div>

<script type="text/javascript">

            $(".add_student").click(function(){
                $("text_area").show();
            });
</script>