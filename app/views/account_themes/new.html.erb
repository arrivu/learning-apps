 <div id="wrap">
   <%= render 'shared/side_menu' %>
   <div id="content">
     <!-- .outer -->
     <div class="container-fluid outer"  >
       <div class="row-fluid">
         <div class="span12 inner">
           <!--Begin Datatables-->
           <div class="row-fluid">
             <div class="span12">
               <div class="box">
                 <div id="collapse4" class="body" style = "margin-right:500px">
                   <div class="icons"><span class="badge badge-info">Assign Themes </span></div>
                   <table id="dataTable">
                     <%= form_for (@accountthemes) do |f| %>
                         <%= render 'shared/error_messages', object: f.object %>
                         <tr>
                           <td><%=f.label 'Name'%></td>
                           <td><% themes_array = Theme.all.map { |theme| [theme.name] } %>
                             <%= f.select(:name,options_for_select(themes_array))%> </td></tr>
                         <tr ><td><%= f.submit "Save",class:"btn btn-primary yellobg"%> </td></tr>
                     <% end %>
                   </table>
                   <div class="left" style="padding: 0px;width: 16%;float: right;">
                     <a href="../themes/new" class="btn btn-default btn-large" style="margin:21px; margin-top:-126px;
                             margin-left:100px;width: 140px;"><i class="icon icon-plus-sign"></i>Add Theme</a>
                   </div>
                 </div>
               </div>
             </div>
           </div>
         </div>
       </div>
     </div>
   </div>
   <div id="push"></div>
   <div class="clearfix"></div>