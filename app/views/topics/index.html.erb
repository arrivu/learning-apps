

<%- model_class = Topic -%>


  <div id="wrap">

  <%= render 'shared/side_menu' %>
   <div id="content">
      <div class="container-fluid outer" style="background:#fff;">
         <div class="row-fluid">
             <div class="span12 inner">
                <div class="row-fluid">
                    <div class="span12">
                       <div class="box">
                          <header>
                            <div class="icons"><i class="icon-move"></i></div>
                               <h5>Manage Category </h5> <%= link_to('topics/new', :style=> 'margin:10px;float:right;',
                                       :class=>'btn btn-default') do %>
                                <i class="icon icon-tag">
                              </i>Add New Category<%end%>
                           </header>
                       <div id="collapse4" class="body">
              <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                  <thead>
                    <tr class="tab_head">
                  <th><%= model_class.human_attribute_name(:name) %></th>
                  <th>Color</th>
                  <th><%= model_class.human_attribute_name(:created_at) %></th>
                 <th>Edit Topic</th>
                 <th>Add Sub Topics</th>
                 <th>Delete</th>
                  </tr>
              </thead>
                      <tbody>
            <% @topics.each do |topic| %>
                          <tr>
                            <td><%= link_to topic.name, edit_topic_path(topic) %></td>
                            <td><span style="width:20px;background-color:<%= topic.color %>">&nbsp;&nbsp;&nbsp;</span></td>
                            <td><%=l topic.created_at, :format=>'%d %b. %Y %I:%M'  %></td>
                            <td><%= link_to (edit_topic_path(topic)) do%><i class="icon icon-edit"></i><% end%></td>
                            <td><%= link_to (topic_path(topic)) do%><i class="icon icon-plus-sign"></i><% end%></td>
                            <td>
                              <%= link_to(topic_path(topic),:method => :delete,
                                          :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) ) do %>
                                  <i class="icon icon-trash"></i><% end %>
                            </td>
                          </tr>

            <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>
</div>
 </div>
            </div>
           </div>

 <div class="left" style="padding: 0px;width: 210px;float: right;">
