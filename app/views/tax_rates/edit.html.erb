
<div id="wrap">

  <%= render 'shared/side_menu' %>
               
            <div id="content" class="span9">
                <!-- .outer -->
                <div class="container-fluid outer" style="background:#fff;">
                            <div class="row-fluid">
                                                        <div class="span12 inner">
                            <!--Begin Datatables-->
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="box">
                            
 
                                       
                                        <div id="collapse4" class="body">
                                        	<div class="icons"><span class="badge badge-info">Edit Tax</span></div>
                                           
					<%= simple_form_for(@tax_rate) do |f| %>
					<%= render 'shared/error_messages', object: f.object %>

					<div class="divrow">
										<div class="divleft">
							Description
						</div>
						<div class="divright">
							<%=f.text_field :description %>
						</div>
					</div>
					<div class="divrow">
					<div class="divleft">
							Factor
						</div>
						<div class="divright">
							<%=f.text_field :factor %>
						</div>
					</div>
					<div class="divrow">
						<div class="divleft">
							Valid From
						</div>
						<div class="divright">
							<%= f.input_field :valid_from, :start_year => Date.today.year, :end_year => Date.today.year + 30, class:"date", :order=>[:day,:month,:year],:style=>"width: 86px;" %>

						</div>
					</div>

					<div class="divrow">

						<div class="divleft">
							Valid Untill
						</div>
						<div class="divright">

							<%= f.input_field :valid_until, :start_year => Date.today.year, :end_year => Date.today.year + 30, class:"date", :order=>[:day,:month,:year] ,:style=>"width: 86px;"%>
						</div>

					</div>

					<div class="divrow">
						<div class="divleft">
							Is Default?
						</div>
						<div class="divright">
							<%= f.check_box :is_default %>

						</div>
					</div>

					<div class="divrow">
						<div class="divleft">
							&nbsp;
						</div>
						<div class="divright">
							  <td><%= f.submit "Update" ,:class=>"btn btn-primary"%> </td>
   <td><%= link_to "Cancel", :back ,:class=>"btn btn-default"%> </td>
						</div>
					</div>
					<br>
					<% end %>
                            </div>
                                    </div>
                                </div>
                            </div> 
                                
                            
                        
                    </div>
                    <!-- /.row-fluid -->
                </div>
                <!-- /.outer -->
            </div>
            <!-- END CONTENT -->


            <!-- #push do not remove -->
            <div id="push"></div>
            <!-- /#push -->
        </div>
        <!-- END WRAP -->

        <div class="clearfix"></div>