<html>
<head>
<script language="javascript" type="text/javascript">
tinyMCE.init({
        theme : "advanced",
        mode : "textareas"
});
</script>
</head>
<h3 align = "center">About Details</h3>
<table align="center">
<%= tinymce_assets %>
<%= form_for @aboutdetail do |f| %>
 
<tr>
	<td><%=f.label 'Title'%></td>
	<td><%=f.text_field :title%></td>
</tr>

<tr>
	<td><%=f.label 'Description'%></td>
	<td><%=f.text_area :desc,:class => "tinymce"%></td>
</tr>
<tr >
   <td><%= f.submit "Update" %> </td>
</tr>
<%= tinymce %>
<% end %>
</table>