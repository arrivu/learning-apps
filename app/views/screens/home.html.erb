                <div class="bannertext">  
                 <h3 style="color:white;margin-left: 50px;"><%= slider.header %> </h3>

               </div>     </div>  
               <div class="clearfix"></div>
              <% unless slider.image.nil?  %>
               <div class="span4" align="center" >
                <%= image_tag url_for(:controller => 'sliders',:action => 'show_image_slider', :id => slider.id), :size => "250x160" %> 
              </div>
                 <% end  %>
              <div class="span5" align="justify">
                <p><%= slider.body_tag %><p>
                  <%= render 'show_topics' %>
                </div>    
                <div class="clearfix"></div>
              </div>  
            </div>

          </div>
          <%end%>
          <% end %> 

        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
  $(document).ready(function () {
