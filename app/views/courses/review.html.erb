<div class="container">
<div class="span12">
<div class="span4">       
<div class='span5' style="font-size: 1.6em; font-family: Arial;  text-align:justify;">
  <b style="color: #b26b3a;"><%= @course.title%> </b><br/>
   </div>
  <div class='span5' style="font-size: 17px; font-family: verdana;  text-align: justify;">
      <%= @course.desc%>
</div>   

<p><%= render 'reviewform' %></p>


</div>

 <div class="span6 right">
     
    <div class=""><%= simple_form_for(@comments,:url => url_for(:controller => 'courses',:action => 'review')) do |f| %>
    <% @comments.each do |comment| %>

    <div class="span6" style="margin-bottom:10px;float:left;margin-left: -20px;">
     <div class="reviewer1">

      <% if comment.user.image_blob == nil %>
        <% if comment.user.omni_image_url == nil %>
        <%= gravatar_for_with_size comment.user, "58x58" %>               
        <% else  %>
        <%= image_tag(comment.user.omni_image_url,size: "58x58", alt: "", :class=>"img-circle")%> 
        <% end  %>
      <% else  %>
         <%= image_tag url_for(:controller => 'registrations',:action => 'user_image', :class=>"img-circle", :id => comment.user.id), :size => "58x58" %>
         <% end  %>
    </div>

    <h4><%= comment.user.name  %></h4>
    
    <p style = "color: rgb(128, 123, 123);"><%= distance_of_time_in_words(comment.created_at,Time.now)%></p>
  <ul>

<li class="review-stars"  >
  <a>
     <div style="height:40px;">


 <%= rating_for @course, "rate"  %>

 
     
          </a>
</li>
</ul>


          <div class="bubble-content1">
            <div class="point"></div> 
            <p><%= comment.comment  %></p>
          </div>
          <div class="clearfix"></div>
        </div>
     
       <%end%> 

  
<% end %>
