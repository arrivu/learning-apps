 <div class="clearfix"></div>
 <div class="pagehead separation">
  <div class="container">   
  <!--  <h1 class="ribbon2" style=" font-size:30px;font-family: sans-serif;font-weight: normal;">Discover Courses</h1> -->
  <h1 class="ribbon2"><strong class="ribbon2-content">Discover Courses</strong></h1>
 </div>
</div> 
<div class="container categorygap"> 
  <div class="row">
    <div class="span12 courselibsectioninfo">
      <div class="courselibsectioninfo">
        <div class="coursecount pull-left">
          <span class="badge badge-info">Found <%=pluralize(@total_course_count,"Course")%> </span>
        </div>
         <ul class="nav pull-right" style="margin-left:20px;">
          <li id="fat-menu" class="dropdown btn" style="color:black;">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style=" font-size: 1.2em;
                    position: relative;color:black; ">Tags&nbsp;<b class="caret" style="border-left: 7px solid transparent;border-right: 7px solid transparent;border-top: 7px solid #34495E;"></b></a>
            <ul class="dropdown-menu">

              <% @domain_root_account.tags.each do |tag| %>
                  <li><%= link_to tag.name, tagged_courses_path(tag:tag) %></li>
              <%end%>

            </ul>
          </li>
        </ul>
        <ul class="nav pull-right" style="margin-left:20px;">
         <li id="fat-menu" class="dropdown btn" >
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" style=" font-size: 1.2em;
          position: relative;color:black; ">Sort By&nbsp;&nbsp;<b class="caret" style="border-left: 7px solid transparent;border-right: 7px solid transparent;border-top: 7px solid #34495E;"></b></a>
          
          <ul class="dropdown-menu">
            
           <li><%= link_to "Date" + " ( #{Course.where(ispublished: 1,:isconcluded=>false,account_id:
                   @domain_root_account.id).order(:created_at).size} )", datewise_courses_path %></li>
           <li><%= link_to "Upcoming" + " ( #{Course.where(ispublished: 0, :isconcluded=>false,account_id:
                   @domain_root_account.id).all.size} )", upcomming_courses_path %></li>
           <li><%= link_to "Popularity" + " ( #{Course.where(ispopular: 1,ispublished: 1, :isconcluded=>false,
                                       account_id: @domain_root_account.id).size} )", popular_courses_path %></li>
           <li><%= link_to "Subscribed"+ " ( #{StudentCourse.where(:status =>"enroll",:account_id =>
                   @domain_root_account.id).map(&:course_id).uniq.size} )",
                           subscribed_courses_path %></li>
           <li><%= link_to "Default" + " ( #{Course.where(ispublished: 1,:isconcluded=>false,account_id:
                   @domain_root_account.id).size} )", courses_path %></li>
           
         </ul>
       </li>
     </ul>

     <ul class="nav pull-right" style="margin-left:20px;">
       <li id="fat-menu" class="dropdown btn" style="color:black;">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style=" font-size: 1.2em;
        position: relative;color:black; ">Categories&nbsp;<b class="caret" style="border-left: 7px solid transparent;border-right: 7px solid transparent;border-top: 7px solid #34495E;"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to "All" + " ( #{Course.where(ispublished: 1, :isconcluded=>false,account_id: @domain_root_account.id).all.size} )", courses_path %></li>
          <% @topics.each do |topic| %>
          <% @topicStructure = topic.name + " ( #{topic.courses.count} )" %>
          <li><%= link_to @topicStructure, topic %></li>
          <%end%>    
        </ul>
      </li>
    </ul>
  </div>


