
<%= tinymce_assets %>
<%= form_for @teachingstaff,:url => url_for(:controller => 'teaching_staffs', :action => 'teaching_staff_profile') do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <table>
    <tr>
      <td><%= f.label 'First Name' %> </td>
      <td><%= f.text_field :firstname %> </td>

    </tr>
    <tr>
      <td><%= f.label 'Last Name' %></td>
      <td><%= f.text_field :lastname %></td>
    </tr>
    <tr>
      <td><%= f.label 'Head Line' %></td>
      <td><%= f.text_area :headline,:cols => "10", :rows => "10" %></div></td>
    </tr>
      <br>
      <br>
    <tr>
         <td><%= f.label 'Biography' %></td>
        <td><div id="TinyMCE" ><%= f.text_area :biography,:class => "tinymce" %></div></td>
    </tr>
    <tr>

      <td><%= f.label 'Address' %></td>
      <td><%= f.text_area :address,:cols => "10", :rows => "10" %></td>

    </tr>
    <tr>
       <td><%= f.label 'city' %></td>
      <td> <%= f.text_field :city %></td>
    </tr>
    <tr>
     <tr>
        <td><%= f.label 'Zipcode' %></td>
        <td><%= f.text_field :pincode %></td>
     </tr>
    <tr>
       <td><%= f.label 'Phone Number' %></td>
       <td><%= f.text_field :phonenumber %></td>
    </tr>
    <tr>
      <td><%= f.submit "Save and Continue" %> </td>
    </tr>
     <%= tinymce %>
    </table>
<%end%>