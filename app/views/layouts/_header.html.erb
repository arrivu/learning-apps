<%= javascript_tag do %>
// Pre load images for rollover
if (document.images) {
  smile = new Image;
  nosmile = new Image;

  smile.src = "/assets/beaconslogop.png";
  nosmile.src = "/assets/zbeaconslogo.png";
}
function swapImage(thisImage,newImage) {
  if (document.images) {
    document[thisImage].src = eval(newImage + ".src");
  }
}
