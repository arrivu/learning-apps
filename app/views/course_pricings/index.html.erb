 <div id="wrap">
  <%= render 'shared/side_menu' %>

   <div id="content" class="span9">

     <div class="container-fluid outer"  >
      <div class="row-fluid">
       <div class="span12 inner">
        <div class="row-fluid">
         <div class="span12">
          <div class="box">
           <div id="collapse4" class="body">
            <div class="icons"><span class="badge badge-info">Manage Course Pricing</span></div>
               <%= form_tag "/course_pricings/", :method => 'get' do %>
               <td><%= label_tag(:search,"Course:") %></td>
               <td> <%= select_tag :search, options_from_collection_for_select(@courses, "id", "title") , {:prompt => 'ALL'} %></td>
               <%= submit_tag "Search", :name => nil,class:"btn btn-large btn-primary",:style=> "margin-top: -11px"  %><% end %></div>
        <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
             <thead>
              <tr>
               <th >Course Name</th>
               <th > Start Date </th>
               <th >End Date</th>
               <th >Price</th>
               <th >Created At</th>
               <th style="text-align:center;"><%=t '.actions', :default => t("helpers.actions") %></th>
              </tr>
            </thead>
         <% @coursepricings.each do |coursepricing| %>
         <tr> <td><%= coursepricing.course.title%></td>
          <td><%= coursepricing.start_date %></td>
          <td><%= coursepricing.end_date %></td>
          <td><%= coursepricing.price %></td>
          <td><%=l coursepricing.created_at, :format=>'%d %b. %Y %I:%M' %></td>
          <td> <%= link_to(edit_course_pricing_path(coursepricing)) do%><i class="icon icon-edit"></i><% end%></td>
          <td>
          <%= link_to(course_pricing_path(coursepricing),
                                   :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) ) do %>
           <i class="icon icon-trash"></i><% end %></td></tr>
         <% end %>
        </table>
      </div>
     </div>
    </div>
   </div>
  </div>
 </div>
</div>
</div>
<div class="span2 left" style="padding: 0px; ">
<a href= <%=new_course_path%> class="btn btn-default btn-large" style="margin:10px; margin-top:-380px;"><i class="icon icon-plus-sign"></i>Add Course</a>
<a href= <%= new_course_pricing_path%> class="btn btn-default btn-large" style="margin:10px; margin-top:-320px;"><i class="icon icon-plus-sign"></i>Add Price</a>
</div>
<div id="push"></div>
<div class="clearfix"></div>

