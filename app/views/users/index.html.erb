
<div id="wrap" style=" background: url("bg.jpg") repeat;">
  <%= render 'shared/side_menu' %>             
  <div id="content"  class="span9">
    <div class="container-fluid outer"  >
                            <div class="row-fluid">
                                                        <div class="span12 inner">
                            <!--Begin Datatables-->
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="box">

                                        <div id="collapse4" class="body">
                                          <div class="icons"><span class="badge badge-info">Users</span></div>
                                            <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                                                <thead>
                                                  
      <tr class="tab_head">
        <th >Username</th>
        <th >Email</th>
        <th >Registered</th>
        <th>Login Type</th>
        <th >Role</th>
<% if current_user.has_role? :admin %>
        <th></th>
        <th></th>
        <%end%>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td ><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <td><%=l user.created_at , :format=>'%d %b. %Y %I:%M'%></td>
        <% if user.provider=="google_oauth2" %>
        <td>google</td>
        <% else %>
        <td><%= user.provider %></td>
        <% end %>
        <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
           <% if current_user.has_role? :admin %>
            <% unless user==current_user %>
        <td >
       
         
          <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Change role</a>
          <%= render user %>
        </td>
                  <% end %>

        <td><%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini btn-danger') unless user == current_user %></td>
         <% end %>
 

      </tr>
          <% end %>
    </tbody>
                                            </table>

                                    </div>
                                    <div class='apple_pagination' align="center"><%= will_paginate  @users, :container => true %></div>
                                    </div>
                                </div>
                            </div> 
                                
                            
                        
                    </div>
                    <!-- /.row-fluid -->
                </div>
                <!-- /.outer -->
            </div></div>
            <!-- END CONTENT -->
<div class="span2 left" style="padding: 0px;">
    <a href="accounts/new" class="btn btn-default btn-large" style="margin:10px;"><i class="icon icon-user"></i>Add Account</a>
    <a href="courses/new" class="btn btn-default btn-large" style="margin:10px;"><i class="icon icon-book"></i>Add Course</a>
    </div>


            <!-- #push do not remove -->
            <div id="push"></div>
            <!-- /#push -->
        
        <!-- END WRAP -->

        <div class="clearfix"></div>

 </div>

