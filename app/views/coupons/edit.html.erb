                          <% end %>
                        </div>

                          <script>
                          $('#coupon_course_check_box').click(function(){
                            if($('#coupon_course_check_box').is(':checked')){
                              $("#select_box").hide();
                              $('#all_course').hide();
                              $('#student_email').hide();
                            } else {
                             $("#select_box").show();
                           }
                         })

                          $('#coupon_coupon_obj').click(function(){
                           var v = $('#coupon_coupon_obj').val();

                           if(v=="Course"){
                            $('#all_course').show();
                            $('#student_email').hide();
                          }
                          else if( v=="Student"){
                           $('#student_email').show();
                           $('#all_course').hide();
                         }
                         else{
                          $('#all_course').hide();
                          $('#student_email').hide();
                        }

                      });




                          </script>


