<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= theme_stylesheet_link_tag "application" , :media => "all" %>
  <%= theme_javascript_include_tag "application" %>
  <%= csrf_meta_tags unless response.cache_control[:public] %>
  <%= render 'layouts/shim' %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= favicon_link_tag 'favicon.png', :size => "16x16"%>
<!-- <script src="//use.edgefonts.net/source-sans-pro:n2,i2,n3,i3,n4,i4,n6,i6,n7,i7,n9,i9:all.js"></script>
 --></head>
<body>

  <% if check_null(yield(:effectingHeader)) %>
  <%= render 'layouts/header' %>
  <% else %>
  <!-- Do Nothing -->
  <% end %>
  <!-- <div class="container"> -->

  <% unless response.cache_control[:public] %>
    <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
<% end %>
    <%= yield %>

    <%= render 'layouts/login_popup' %>
    <%= render 'layouts/signup_popup' %>
    <%= render 'layouts/forgot_password' %>
    <%= render 'layouts/footer' %>
</body>
<%= debug(params) if Rails.env.development? %>
</html>
