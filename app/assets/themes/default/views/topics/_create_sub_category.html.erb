<h3 align = "center">New Category</h3>
                                                                            <div id="collapse4" class="body">
                                
     <%= simple_form_for @topic , url: '/category_details', :html => { :class => 'form-horizontal' } do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
       <table><tr><td></td>
                        <td>
                          <% topics_array = Topic.where(:id=>params[:id]).map { |topic| [topic.name, topic.id] } %>

                          <%= f.label(:root_topic_id,options_for_select(topics_array))%>
        <tr>

          <td><%= f.label :name, :class => 'control-label' %></td>

          <td><%= f.text_field :name, :class => 'text_field',:maxlength => 30 , :autofocus => true%></td></tr>
          <tr><td><%= f.label :color, :class => 'control-label' %> </td>
            <td> <%= f.input :color, as: :minicolors,label:false %></td>
          </tr>
          <tr><td colspan="2" style="text-align:center;" ><%= f.submit "Create Category", :class => 'btn btn-primary'  %></td></tr>

          <% end %>
        </table>


                     
