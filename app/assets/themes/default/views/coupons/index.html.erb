<div id="wrap">
<%= render 'shared/side_menu' %>
 <div id="content" class="span9">
  <div class="container-fluid outer"  >
   <div class="row-fluid">
    <div class="span12 inner">
     <div class="row-fluid">
      <div class="span12">
       <div class="box">
        <div id="collapse4" class="body">
         <div class="icons"><span class="badge badge-info">Manage Coupons  </span></div>
          <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
           <thead>
            <tr class="tab_head">
            <th>Course</th>
            <th>Alpha code</th>
            <th>Digit code</th>
            <th >Amount off</th>
            <th >Percentage off</th>
            <th>Expiration</th>
            <th >No Of times<br/>Redeemable</th>
            <th>Current<br/> Redeem count</th>
            <th style="text-align:center;"><%=t '.actions', :default => t("helpers.actions") %></th>
            </tr>
           </thead>
         <% @coupons.each do |coupon| %>
          <tr>
           <td><%= Coupon.course_name(coupon.metadata)%></td>
           <td><%= coupon.alpha_code %></td>
           <td><%= coupon.digit_code %></td>
           <td ><%= coupon.amount_one %></td>
           <td ><%= coupon.percentage_one %></td>
           <td><%= coupon.expiration %></td>
           <td><%= coupon.how_many %></td>
           <td ><%= coupon.redemptions_count %></td>
           <td> <%= link_to(edit_coupon_path(coupon)) do%><i class="icon icon-edit"></i><% end%></td>
           <td><%= link_to(coupon_path(coupon),:method => :delete,
            :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) ) do %>
           <i class="icon icon-trash"></i><% end %></td>
           </tr>
         <% end %>
         </table>
        </div>
       </div>
      </div>
     </div>
    </div>
   </div>
  </div>
 </div>

 <div class="span2 left" style="margin-left:20px;padding: 0px; ">

<a href="../coupons/new" class="btn btn-default btn-large" style="margin:10px;"><i class="icon icon-plus-sign"></i>Add Coupon</a>
</div>
<div id="push"></div>
<div class="clearfix"></div>
