<br>
<div class="row">
	<div class="span12 offset4">
		<table>
			<tr><td></td><td>
		<h2>Edit Profile</h2></td></tr>
		<%= simple_form_for(resource, :as => resource_name, 
			:url => registration_path(resource_name), 
			:html => { :method => :put, 
				:class => 'form-vertical' }) do |f| %>
				<%= f.error_notification %>
				<%= display_base_errors resource %>
				<tr><td><%= f.label :title, "Name" %></td>
				<td><%= f.input :name,:label => false, :autofocus => true %></td></tr>
				<tr><td><%= f.label :title, "Email" %></td>
				    <td><%= f.input :email,:label => false, :required => true %></td></tr>
               <tr> <td></td> <td>
                 <% if current_user.omni_image_url.nil? %>
                  <%= image_tag current_user.avatar.url(:thumb) %>
                 <% else  %>
                  <%= image_tag(current_user.omni_image_url,size: "45x40", alt: current_user.name)%>
                 <% end  %>
                </td></tr>
              <tr><td><%= f.label :title, "Image" %></td>
				<td><%= f.file_field :avatar,:label => false %></td></tr>
				<tr><td><%= f.label :title, "Password" %></td>
				<td>leave it blank if you don't want to change it<%= f.input :password,:label => false,
                                                                             :autocomplete => "off",
				:required => false %></td></tr>
				<tr><td><%= f.label :title, "Password Confirmation " %></td>
				<td><%= f.input :password_confirmation, 

				:hint => "",:label => false%></td></tr>
				<tr><td><%= f.label :title, "Current Password" %></td>
				<td>we need your current password incase of change password<%= f.input :current_password,
                                                           :label => false, :hint => "", :required => true %></td></tr>
				<% #end %>
				<tr><td><%= link_to "Cancel" ,:back,:class=>"btn" %></td>
                  <td><%= f.button :submit, 'Update Profile', :class => 'btn-primary' %></td></tr>
				<% end %>
				</table>
				<% #unless current_user.has_role? :admin  %>
				<!-- <h3>Cancel my account</h3> -->

				<!-- <p>Unhappy?
				<%= link_to "Cancel my account", registration_path(resource_name),
                                             :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p> -->
				<% #end %>
			</div>
		</div>