<div class="topic">
<%= simple_form_for @topic, :html => { :class => 'form-inline' } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.hidden_field :parent_id %>
      <%= f.label :name, "New Category Name" %>
      <%= f.text_field :name %>
    <%= f.label :color %>
    <%= f.input :color, as: :minicolors,label:false %>
    <p><%= f.submit "Submit" ,class: "btn btn-primary"%></p>
<% end %>
</div>
