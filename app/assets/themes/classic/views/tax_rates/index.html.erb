<div style="float:left">
	<%= render 'shared/side_menu' %>
</div>
<div>
	<div class="row">
		<div class="span12 offset3" style="min-height:560px">
<table class="table table-condensed table-hover table table-striped">
  <thead>
    <tr ><td colspan="6"><h3 align = "center">Manage Taxes</h3></td></tr>
    <tr class="tab_head">
      <th>Description</th>
      <th>Factor</th>
      <th>Valid From</th>
      <th>Valid Until</th>
      <th>Is Default</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
<% @tax_rate.each do |tax_rate| %>
    <tr>

     
        <td><%= tax_rate.description %></td>
        <td><%= tax_rate.factor %></td>
        <td><%= tax_rate.valid_from %></td>
        <td><%= tax_rate.valid_until %></td>
        <td><%= tax_rate.is_default %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
						edit_tax_rate_path(tax_rate), :class => 'btn btn-mini' %>

						<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
						tax_rate_path(tax_rate),
						:method => :delete,
						:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
						:class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
      <% end %>
   


  </tbody>

</table>


			
		</div>
	</div>
</div>
  <div class='apple_pagination' align="center">
    
     <%= will_paginate @tax_rate, :container => false %>
   </div>
