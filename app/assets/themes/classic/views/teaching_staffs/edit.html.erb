<div id="wrap">
  <%= render 'shared/side_menu' %>
  <div id="content" class="span9">
    <div class="container-fluid outer"  >
      <div class="row-fluid">
        <div class="span12 inner">
          <div class="row-fluid">
            <div class="span12">
              <div class="box">
                <div id="collapse4" class="body">
                  <div class="icons"><span class="badge badge-info">Edit Teaching Staff </span></div>
                  <%= simple_form_for(@teachingstaff) do |f| %>
                      <%= render 'shared/error_messages', object: f.object %>
                      <%= f.fields_for (@teachingstaff.user) do |user_form| %>
                          <table class="tableform">
                            <tbody><tr>
                              <th>Name</th>
                              <td>
                                <%= user_form.text_field :name, :autofocus => true %>
                              </td>
                            </tr>
                            <tr> <th>Email</th>
                              <td>
                                <%= user_form.text_field :email, :required => true %>
                              </td>
                            </tr>
                            <tr><td>  </td><td>
                              <% if @teachingstaff.user.omni_image_url.nil? %>
                                  <%= image_tag @teachingstaff.user.avatar.url(:thumb) %>
                              <% else  %>
                              <%= image_tag(@teachingstaff.user.omni_image_url,size: "45x40", alt: current_user.name)%>
                              <% end  %>
                            </td></tr>
                            <tr><th>Image</td>
                              <td><%= user_form.file_field :avatar %></td></tr>
                      <%end %>
                      <tr><th>Description</th><td><%= f.text_area :description ,:cols => "30",
                                                                  :rows => "10",:maxlength => 300 %></td></tr>
                      <tr><th>Qualification</th><td> <%= f.text_field :qualification %></td></tr>
                      <tr> <th>Linkedin Profile Url</th>
                        <td>
                          <%= f.text_field :linkedin_profile_url  %>
                        </td>
                      </tr>
                      <tr> <th>Active</th>
                        <td>
                          <%= f.check_box :is_active %>
                        </td>
                      </tr>
                      <tr>  <td><%= f.submit "Update" ,:class=>"btn btn-primary"%> </td>
   <td><%= link_to "Cancel", :back ,:class=>"btn btn-default"%> </td>
                  <% end %></tr></table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="push"></div>
</div>
<div class="clearfix"></div>
