 <div style="float:left">
  <%= render 'shared/side_menu' %>
</div>


<div class="row">
  <div class="span12 offset3" style="min-height:550px;">
  	<h3 align = "center">Manage Teaching Staff Details</h3><br/>
  	<table class="table table-condensed table-hover table table-striped">
      <tr>
        <th style="background:#2A488E;color:white;"></th>
       <th style="background:#2A488E;color:white;">Email</th>
       <th style="background:#2A488E;color:white;">Name</th>
       <th style="background:#2A488E;color:white;;color:white;">Qualification</th>
       <th style="background:#2A488E;color:white;">Description</th>
       
       <th style="background:#2A488E;color:white;">Created At</th>

       <th style="background:#2A488E;color:white;width:100px;">Action</th>
     </tr>
<% @teachingstaff.each do |teachingstaff| %>
<tr><td>
<% if teachingstaff.user.image_blob != nil %>
<%= image_tag url_for(:controller=>"registrations",:action => 'user_image', :id => teachingstaff.user.id), :size => "30x30" %>
<% end  %>
 </td>
<td><%= teachingstaff.user.email %></td><td>
  <%= teachingstaff.name %></td><td>
<%= teachingstaff.qualification %></td><td>

<%= teachingstaff.description %></td><td>
<%=l teachingstaff.created_at, :format=>'%d %b. %Y %I:%M' %></td><td>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
      edit_teaching_staff_path(teachingstaff), :class => 'btn btn-mini' %>

      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
      teaching_staff_path(teachingstaff),
      :method => :delete,
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
      :class => 'btn btn-mini btn-danger' %></td><td></tr>

<% end %>
</table>
</div></div>
<div class='apple_pagination' align="center"><%= will_paginate  @teachingstaff, :container => false %></div>
