<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= theme_stylesheet_link_tag "application" , :media => "all" %>
  <%= theme_javascript_include_tag "application" %>
  <%= csrf_meta_tags unless response.cache_control[:public] %>
  <%= render 'layouts/shim' %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= favicon_link_tag 'favicon.png', :size => "16x16"%>

</head>
<body>

  <% if check_null(yield(:effectingHeader)) %>
  <div style="margin-bottom:70px;">
  <%= render 'layouts/header' %>

  </div>

  <% else %>
  <!-- Do Nothing -->
  <% end %>
  <!-- <div class="container"> -->

  <% unless response.cache_control[:public] %>
    <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
<% end %>
  </br>
    <hr style="margin: -1px 0;">

    <%= yield %>

    <%= render 'layouts/login_popup' %>
    <%= render 'layouts/signup_popup' %>
<%= render 'layouts/forgot_password' %>
  <%= render 'layouts/footer' %>
</body>
<%= debug(params) if Rails.env.development? %>
</html>
