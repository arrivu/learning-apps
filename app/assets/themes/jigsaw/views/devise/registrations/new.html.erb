<br>
<div class="row">
  <div class="span8 offset4">

    <div class="sign_up_top">
      <div class="above_from_for">
        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),
                            :html => {:class => 'form-vertical' },:validate=>true) do |f| %>

            <table style="margin-left:-27px;">
              <tr>
                <td> <h3 align="center" style="margin:0px;font-size:19px;">Create New Account</h3>
                  <div style="margin-top:20px;">
                    <%= f.error_notification %>
                    <%= display_base_errors resource %>
                    <%= f.input :name, :autofocus => true %>
                    <%= f.input :email, :required => true %>
                    <%= f.input :password, :required => true %>
                    <%= f.input :password_confirmation, :required => true %>
                    <%= f.button :submit, 'Create my account', :class => 'btn-primary btn-success'%>
                  </div>
                </td>


                <td class="seperator">
                  <div style="margin: 70px 20px;"> <%= image_tag("or.png", :size => "200x200", :alt => "") %> </div>
                </td>


                <td valign="top">
                  <h3 align="left" style="margin: 0px 0px 0px -43px;font-size:19px;">   Login using</h3>
                  <div style="margin-left:10px;margin-top:55px;">

                    <%= link_to image_tag("loginfacebook.png",:class => "login_img", alt: ""),'/auth/facebook/'%>
                    <br>
                    Facebook
                    <br><br>
                    <%= link_to image_tag("Google_Logo.jpg", :class => "login_img", alt: ""), '/auth/google_oauth2/' %>
                    <br>
                    Google
                    <br><br>
                    <%= link_to image_tag("login-linkedin.png", :class => "login_img", alt: ""), '/auth/linkedin/'  %>
                    <br>
                    LinkedIn
                  </div>
                </td>
              </tr>
            </table>
        <% end %>
      </div>
    </div>
  </div>
</div>